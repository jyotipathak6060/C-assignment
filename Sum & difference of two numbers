#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{ int a,b;
int sum,diff;
float nsum,ndiff; //here 'n' in 'nsum' and 'ndiff' represents new
float c,d;
scanf("%d %d",&a,&b);
scanf("%f %f",&c,&d);
sum=a+b;
diff=(a>b)?(a-b):(b-a);
nsum=c+d;
ndiff=(c>d)?(c-d):(c-a);
printf("%d %d",sum,diff);
printf("\n%0.1f %0.1f",nsum,ndiff);
   return 0;
}
